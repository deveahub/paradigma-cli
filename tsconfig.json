{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"module": "commonjs",
		"jsx": "react",
		"target": "es6",
		"esModuleInterop": true,
		"outDir": "dist",
		"baseUrl": ".",
		"noUnusedParameters": false,
		"noUnusedLocals": false,
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"typeRoots": ["src/typings"]
	},
	"include": [
		"src"
	]
}
